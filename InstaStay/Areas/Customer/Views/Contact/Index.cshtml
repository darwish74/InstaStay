@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject UserManager<ApplicationUser> _userManager
@{
    ViewData["Title"] = "Contact Page";
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<div class="container py-5">
    
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title mb-3">Request Account Conversion</h2>
            <p class="card-text">Do you want to manage hotels? Request to convert your account and access exclusive tools for hotel management.</p>

            <form method="post" action="/Customer/Contact/RequestConversion" class="needs-validation" novalidate>
                <div class="mb-3">
                    <input type="hidden" name="userId" value="@userId" />
                    <label for="managerReason" class="form-label">Why do you need a Hotel Manager account?</label>
                    <textarea id="managerReason"
                              name="managerReason"
                              class="form-control"
                              rows="5"
                              placeholder="Explain your reason..."
                              aria-label="Reason for account conversion"
                              required></textarea>
                    <div class="invalid-feedback">Please explain why you need a Hotel Manager account.</div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">Submit</button>
                    <button type="reset" class="btn btn-outline-secondary">Clear</button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-5">
        <p class="mb-3">Need immediate assistance? Explore our Help Center or return to the homepage for more options.</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="/Customer/Home/index" class="btn btn-info">Back to Home</a>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .card {
        border: none;
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    h1, h2 {
        font-weight: 600;
    }

    .form-control:focus {
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        border-color: #007bff;
    }
</style>

<script>
    // Bootstrap validation for forms
    (() => {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
