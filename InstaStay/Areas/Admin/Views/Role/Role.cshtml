@model Models.ViewModels.RoleVM

@{
    ViewData["Title"] = "Role";
}

<h1 class="text-center mb-4">Create Role</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body p-4">
                <h4 class="card-title text-center mb-3">
                    <i class="fas fa-user-tag"></i> Create New Role
                </h4>
                <form asp-action="Role">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: none;">
                        <!-- Validation summary will appear here -->
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="RoleName" class="form-label">
                            <i class="fas fa-id-badge"></i> Role Name
                        </label>
                        <input asp-for="RoleName" class="form-control" placeholder="Enter role name" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group d-grid">
                        <button type="submit" class="btn btn-success btn-lg shadow-sm">
                            <i class="fas fa-plus-circle"></i> Create Role
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-link text-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Show validation summary if there are errors
            if ($(".text-danger").text().trim() !== "") {
                $(".alert-danger").show();
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
