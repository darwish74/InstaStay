@model IEnumerable<Models.Models.NewHotelRequests>
@{
    ViewData["Title"] = "Reports";
}
<h1 class="text-center">Hotel Requests</h1>
<table class="table table-striped table-bordered text-center align-content-sm-center mx-3">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.CoverImage)</th>
            <th>@Html.DisplayNameFor(model => model.stars)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td class="text-center">
                    <img src="~/Images/HotelImages/@item.CoverImage" alt="@item.Name" class="rounded shadow-sm img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;">
                </td>
                <td>@Html.DisplayFor(modelItem => item.stars)</td>
                <td>
                    <form asp-action="Accept" asp-controller="Dashboard" asp-area="Admin" asp-route-id="@item.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-success">
                            <i class="fas fa-check"></i> Accept
                        </button>
                    </form>
                    <form asp-action="Delete" asp-controller="Dashboard" asp-area="Admin" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
