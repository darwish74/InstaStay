@model Hotel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <!-- Hero Image -->
    <div class="card shadow-lg border-0">
        <img src="~/images/HotelImages/@Model.CoverImage" class="card-img-top img-fluid rounded" alt="@Model.Name">
    </div>

    <!-- Hotel Information Section -->
    <div class="row mt-4">
        <div class="col-md-8">
            <h2 class="text-primary fw-bold">@Model.Name</h2>
            @* <p class="text-muted"><i class="fas fa-map-marker-alt"></i> @Model.Location</p> *@

            <p class="lead">@Model.Description</p>

            <h4 class="text-success">$@Model.Price / Night</h4>

            <!-- Booking & Availability -->
            <a href="@Url.Action("Book", "Hotel", new { id = Model.Id })" class="btn btn-primary btn-lg">
                <i class="fas fa-calendar-check"></i> Book Now
            </a>
        </div>

        <!-- Amenities & Rating -->
        <div class="col-md-4">
            <div class="card p-3 shadow-sm">
                <h5 class="fw-bold">Hotel Features</h5>
                <ul class="list-unstyled">
                    <li><i class="fas fa-wifi text-success"></i> Free Wi-Fi</li>
                    <li><i class="fas fa-swimming-pool text-primary"></i> Swimming Pool</li>
                    <li><i class="fas fa-utensils text-danger"></i> Restaurant</li>
                    <li><i class="fas fa-car text-warning"></i> Free Parking</li>
                    <li><i class="fas fa-dumbbell text-info"></i> Gym & Spa</li>
                </ul>
            </div>

            <!-- Rating Section -->
            <div class="mt-3 text-center">
                <span class="badge bg-warning text-dark p-2">
                    <i class="fas fa-star"></i> 4.8 / 5 (125 Reviews)
                </span>
            </div>
        </div>
    </div>

    <!-- Map Section -->
    <div class="mt-5">
        <h4>Location</h4>
        <iframe width="100%"
                height="350"
                style="border:0"
                loading="lazy"
                allowfullscreen
                src="https://www.google.com/maps/embed/v1/place?key=YOUR_GOOGLE_MAPS_API_KEY&q=">
        </iframe>
    </div>
</div>
