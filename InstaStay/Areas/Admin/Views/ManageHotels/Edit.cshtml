@model Models.Models.Hotel
@{
    ViewData["Title"] = "Edit Hotel";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 shadow-lg p-4 rounded bg-white">

            <h1 class="mb-4 text-center fw-bold text-primary">
                <i class="fas fa-hotel"></i> Edit Hotel
            </h1>

            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">
                        <i class="fas fa-signature text-secondary"></i> Hotel Name
                    </label>
                    <input asp-for="Name" class="form-control" placeholder="Enter hotel name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold">
                        <i class="fas fa-map-marker-alt text-secondary"></i> Address
                    </label>
                    <input asp-for="Address" class="form-control" placeholder="Enter hotel address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">
                        <i class="fas fa-align-left text-secondary"></i> Description
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter a short description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Stars" class="form-label fw-bold">
                        <i class="fas fa-star text-warning"></i> Star Rating
                    </label>
                    <input type="number" asp-for="Stars" class="form-control" min="1" max="5" placeholder="Enter number of stars" />
                    <span asp-validation-for="Stars" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">
                        <i class="fas fa-image text-secondary"></i> Cover Image
                    </label>
                    <input type="file" name="CoverImage" class="form-control" />
                    <span asp-validation-for="CoverImage" class="text-danger"></span>

                    @if (!string.IsNullOrEmpty(Model.CoverImage))
                    {
                        <div class="mt-3 text-center">
                            <img src="~/images/HotelImages/@Model.CoverImage" alt="Current Cover Image" class="img-thumbnail shadow-sm" width="200" />
                        </div>
                    }
                </div>
                <div class="mb-3">
                    <label asp-for="ContactInfo" class="form-label fw-bold">
                        <i class="fas fa-phone text-secondary"></i> Contact Info
                    </label>
                    <input asp-for="ContactInfo" class="form-control" placeholder="Enter contact info" />
                    <span asp-validation-for="ContactInfo" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Save Changes
                    </button>
                    <a asp-action="ShowAllHotels" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
