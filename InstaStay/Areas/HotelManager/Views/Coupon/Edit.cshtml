@model Models.Models.Coupon

@{
    ViewData["Title"] = "Edit Coupon";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h3 class="text-center text-primary mb-3">
                    <i class="bi bi-pencil-square"></i> Edit Coupon
                </h3>
                <form asp-action="Edit">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                    <div class="mb-3">
                        <input asp-for="CouponId" hidden class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Code" class="form-label fw-bold">
                            <i class="bi bi-ticket-perforated"></i> Coupon Code
                        </label>
                        <input asp-for="Code" class="form-control" placeholder="Enter Coupon Code" required />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DiscountType" class="form-label fw-bold">
                            <i class="bi bi-percent"></i> Discount Type
                        </label>
                        <select asp-for="DiscountType" class="form-select">
                            <option value="Fixed">Fixed</option>
                            <option value="Percentage">Percentage</option>
                        </select>
                        <span asp-validation-for="DiscountType" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DiscountValue" class="form-label fw-bold">
                            <i class="bi bi-cash-coin"></i> Discount Value
                        </label>
                        <input asp-for="DiscountValue" class="form-control" type="number" min="0" required />
                        <span asp-validation-for="DiscountValue" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ValidFrom" class="form-label fw-bold">
                            <i class="bi bi-calendar-check"></i> Valid From
                        </label>
                        <input asp-for="ValidFrom" class="form-control" type="date" required />
                        <span asp-validation-for="ValidFrom" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ValidTo" class="form-label fw-bold">
                            <i class="bi bi-calendar-x"></i> Valid To
                        </label>
                        <input asp-for="ValidTo" class="form-control" type="date" required />
                        <span asp-validation-for="ValidTo" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="IsActive" id="isActiveCheck" />
                        <label class="form-check-label fw-bold" for="isActiveCheck">
                            <i class="bi bi-toggle-on"></i> Active
                        </label>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                    </div>
                </form>
                <div class="mt-3 text-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
