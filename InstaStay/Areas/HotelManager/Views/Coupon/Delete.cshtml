@model Models.Models.Coupon

@{
    ViewData["Title"] = "Delete Coupon";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4 border-danger">
                <h3 class="text-center text-danger mb-3">
                    <i class="bi bi-trash3-fill"></i> Delete Coupon
                </h3>
                <p class="text-center text-muted">Are you sure you want to delete this coupon?</p>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="bg-light"><i class="bi bi-tag-fill"></i> Coupon ID</th>
                                <td>@Html.DisplayFor(model => model.CouponId)</td>
                            </tr>
                            <tr>
                                <th class="bg-light"><i class="bi bi-ticket-perforated"></i> Code</th>
                                <td>@Html.DisplayFor(model => model.Code)</td>
                            </tr>
                            <tr>
                                <th class="bg-light"><i class="bi bi-percent"></i> Discount Type</th>
                                <td>@Html.DisplayFor(model => model.DiscountType)</td>
                            </tr>
                            <tr>
                                <th class="bg-light"><i class="bi bi-cash-coin"></i> Discount Value</th>
                                <td>@Html.DisplayFor(model => model.DiscountValue)</td>
                            </tr>
                            <tr>
                                <th class="bg-light"><i class="bi bi-calendar-check"></i> Valid From</th>
                                <td>@Html.DisplayFor(model => model.ValidFrom)</td>
                            </tr>
                            <tr>
                                <th class="bg-light"><i class="bi bi-calendar-x"></i> Valid To</th>
                                <td>@Html.DisplayFor(model => model.ValidTo)</td>
                            </tr>
                            <tr>
                                <th class="bg-light"><i class="bi bi-toggle-on"></i> Active</th>
                                <td>@(Model.IsActive ? "Yes" : "No")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <form asp-action="DeleteConfirmed" onsubmit="return confirmDelete();">
                    <input type="hidden" asp-for="CouponId" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this coupon? This action cannot be undone.");
        }
    </script>
}
