@model Models.Models.Room
@{
    ViewData["Title"] = "Add Room";
}
<h1 class="mb-4 text-center">Add Room</h1>

<div class="card shadow-none p-4  ms-5 justify-content-center">
    <h4 class="card-title">Room Details</h4>
    <hr />
    <div class="row align-content-center ">
        <div class="col-md-8 col-lg-6">
            <form asp-action="AddRoom">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Id" class="form-label">Room ID</label>
                    <input asp-for="Id" class="form-control" placeholder="Enter Room ID" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Capacity" class="form-label">Capacity</label>
                    <input asp-for="Capacity" class="form-control" placeholder="Enter Room Capacity" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PricePerNight" class="form-label">Price Per Night</label>
                    <input asp-for="PricePerNight" class="form-control" placeholder="Enter Price" />
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="Availbility" id="availability-check" />
                    <label class="form-check-label" for="availability-check">
                        @Html.DisplayNameFor(model => model.Availbility)
                    </label>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="RoomType" class="form-label">Room Type</label>
                    <select asp-for="RoomType" class="form-select">
                        <option value="">Select Room Type</option>
                        <option value="Single">Single</option>
                        <option value="Double">Double</option>
                        <option value="Suite">Suite</option>
                    </select>
                    <span asp-validation-for="RoomType" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="BedType" class="form-label">Bed Type</label>
                    <select asp-for="BedType" class="form-select">
                        <option value="">Select Bed Type</option>
                        <option value="Single">Single</option>
                        <option value="Double">Double</option>
                        <option value="King">King</option>
                        <option value="Queen">Queen</option>
                    </select>
                    <span asp-validation-for="BedType" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HotelId" class="form-label">Hotel</label>
                    <select asp-for="HotelId" class="form-select">
                        <option value="">Select Hotel</option>
                        <!-- Populate with actual hotel IDs/names -->
                        <option value="1">Hotel A</option>
                        <option value="2">Hotel B</option>
                    </select>
                    <span asp-validation-for="HotelId" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create Room
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
