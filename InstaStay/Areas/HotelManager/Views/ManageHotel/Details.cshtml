@model Models.Models.Hotel

@{
    ViewData["Title"] = "Hotel Details";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-hotel me-2"></i> Hotel Details</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="~/images/HotelImages/@Model.CoverImage" alt="@Model.Name Cover Image" class="img-fluid rounded shadow" style="max-width: 100%; height: auto;">
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Hotel Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Stars:</dt>
                        <dd class="col-sm-8">
                            @for (int i = 0; i < Model.Stars; i++)
                            {
                                <i class="fas fa-star text-warning"></i>
                            }
                        </dd>

                        <dt class="col-sm-4">Contact Info:</dt>
                        <dd class="col-sm-8">@Model.ContactInfo</dd>

                        <dt class="col-sm-4">Hotel Manager ID:</dt>
                        <dd class="col-sm-8">@Model.HotelManagerId</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
