@model Models.Models.Hotel
@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5">
<table class="table table-striped table-hover table-bordered border-secondary align-middle text-center ms-2">
    <thead class="table-dark text-center">
        <tr>
            <th>
                Image 
            </th>
            <th>
                Hotel Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
          @foreach (var item in Model.HotelImages) {
        <tr>
            <td>
                    <div class="p-2">
                        <img src="~/images/HIL/@item.ImageURL" class="img-thumbnail" width="100" />
                    </div>
            </td>
            <td>
                    <p>@Model.Name</p>
            </td>
            <td>
                      <a class="text-danger btn delete-btn " href="/HotelManager/Images/Delete/@item.Id">
                                <i class="fas fa-trash-alt me-2"></i> Delete
                      </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var successMessage = '@TempData["success"]';
            if (successMessage && successMessage.trim() !== "") {
                toastr.success(successMessage);
            }
        });
    </script>
}
