@model IEnumerable<Models.Models.Booking>

@{
    ViewData["Title"] = "All Booking";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">📅 All Bookings</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">No bookings found for this hotel.</div>
    }
    else
    {
        <table class="table table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th>Room Type</th>
                    <th>Check-In Date</th>
                    <th>Check-Out Date</th>
                    <th>Total Amount ($)</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.User.UserName</td>
                        <td>@item.Room.RoomType</td>
                        <td>@item.CheckINDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.CheckOutDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.TotalAmount.ToString("C")</td>
                        <td>
                            @if (item.BookingStatus == "Confirmed")
                            {
                                <span class="badge bg-success">Confirmed</span>
                            }
                            else if (item.BookingStatus == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Canceled</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
