@model IEnumerable<Models.Models.Hotel>

@{
    ViewData["Title"] = "Hotels";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">🏨 Hotel Booking</h2>

    <table class="table table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Hotel Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="/HotelManager/Bookings/AllBooking?HotelId=@item.Id" class="btn btn-outline-primary btn-sm">All Bookings</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
