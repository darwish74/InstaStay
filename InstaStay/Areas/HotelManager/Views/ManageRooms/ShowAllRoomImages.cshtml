@model IEnumerable<Models.Models.RoomImages>

@{
    ViewData["Title"] = "Room Images";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-images"></i> Room Images</h2>
        <a asp-action="AddRoomImage" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Image
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow">
            <thead class="table-dark text-center">
                <tr>
                    <th>#</th>
                    <th>Image</th>
                    <th>Room ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <img src="@item.Image" alt="Room Image" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;">
                        </td>
                        <td>@item.RoomId</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this image?');">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Back to List</a>
</div>