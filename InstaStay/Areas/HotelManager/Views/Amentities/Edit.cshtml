@model Models.Models.Amentities

@{
    ViewData["Title"] = "Edit Amenities";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary"><i class="fas fa-edit"></i> Edit Amenity</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Image" class="form-label fw-bold">Upload Image</label>
                        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                        <span asp-validation-for="Image" class="text-danger"></span>

                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <div class="mt-3 text-center">
                                <img src="~/images/Amentities/@Model.Image" class="img-thumbnail shadow-sm" width="150" />
                                <p class="text-muted">Current Image</p>
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
